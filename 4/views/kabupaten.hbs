{{>header}}
{{>navbar}}

<main>

  <div class="album py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 white">
        
        {{#each kabupaten}}
        <div class="col">
          <div class="card shadow-sm">
            <img src='{{this.photo}}' alt='' class='list-thumbnail'/>

            <div class="card-body">
              <p class="card-text">{{this.nama}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/detailKabupaten/{{this.id}}" class="btn btn-sm" style="background-color: #08de04; color: white; font-weight:bold;">View</a>
                  <a href="/deleteKabupaten/{{this.id}}" class="btn btn-sm btn-danger" style="font-weight:bold;">Delete</a>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

</main>

{{>footer}}